<div class="container">
  <div id="game-name">
    <h1><%= @game.name %></h1>
    <h2>Description:</h2>
    <h3><%= @game.description %></h3>
  </div>
  <div id="picture">

    <img src= <%="/#{@game.name}.jpeg"  %>>
    <div id="scores">

    <h3>Community Score: <%= stars_to_s(@game.avg_user_rating).html_safe %></h3>
    <% if current_user != nil %>
    <h3>Friend Score:</h3>
    <% end %>
  </div>
  </div>
  <div id="mechanics">
    <h2>Mechanics:</h2>
      <% @game.mechanics.each do |mechanic| %>
    <h4> <%=link_to "#{mechanic.description}", mechanic_path(mechanic)%> </h4>
      <% end %>
  </div>

  <br>
   <div id="owner-friends">
    <h3>Friends Who Own This Game:</h3>
    <% @user.friendships.each do |friend| %>
      <% if friend.owned_games.include(@game) %>
        <%= friend.username %>
      <%end%>
    <%end%>
  </div>
  <br>


  <br>
  <div id="review-container">
    <h2>REVIEWS!</h2>
    <% @game.ratings.each do |rating| %>
      <div class="review">
      <h4 class="rating-stars">Rating: <%= stars_to_s(rating.stars).html_safe %></h3>
      <h4>Review: <%= rating.comment %></h3>
    </div>
    <%end%>
  </div>
  <% if current_user != nil  %>
  <div id="review-form">
    <%=form_for [@game, @rating] do |f|  %>
    <%=f.label :stars  %>
    <%=f.select :stars, (0..5) %><br>

    <%=f.label :comment  %>
    <%=f.text_field :comment  %><br>
    <%=f.submit %>
    <% end %>
  </div>
  <% end %>
</div>
